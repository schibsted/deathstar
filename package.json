{
  "name": "deathstar",
  "version": "0.0.1",
  "description": "Death Star",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:schibsted/deathstar.git"
  },
  "scripts": {
    "build": "tsc",
    "start:web": "node build/web.js",
    "start:trigger": "node build/trigger.js",
    "dev:web": "ts-node-dev --respawn --transpile-only src/web.ts",
    "dev:trigger": "ts-node-dev --transpileOnly src/trigger.ts",
    "dev:custom": "ts-node-dev --transpileOnly src/custom-message.ts",
    "lint": "eslint .  --ext ts",
    "lint:fix": "eslint . --fix  --ext ts",
    "test:security": "npm audit --audit-level=high --registry=https://registry.npmjs.org",
    "test:unit": "jest --detectOpenHandles --coverage",
    "test": "npm run lint && npm run test:security && npm run test:unit",
    "prettier": "prettier --write '{*/**/*,*}.{md,json,ts,js}'",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{md,json,ts,js}": [
      "npm run prettier",
      "git add"
    ]
  },
  "author": "Curate",
  "license": "UNLICENSED",
  "devDependencies": {
    "@slack-wrench/jest-mock-web-client": "^1.3.0",
    "@types/bunyan": "^1.8.7",
    "@types/got": "^9.6.12",
    "@types/jest": "^27.0.2",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa-route": "^3.2.4",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.5.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "^11.1.2",
    "nock": "^13.1.3",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@slack/web-api": "^6.4.0",
    "aws-sdk": "^2.999.0",
    "bunyan": "^1.8.15",
    "got": "^11.8.2",
    "koa": "^2.13.3",
    "koa-bodyparser": "^4.3.0",
    "koa-route": "^3.2.0",
    "slack-sig-check": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/tests/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "node"
  }
}
